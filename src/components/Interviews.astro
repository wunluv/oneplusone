---
import { Image } from "astro:assets";

interface InterviewCompany {
  name: string;
  url: string;
}

interface Interviews {
  imageUrl: string;
  name: string;
  company: InterviewCompany;
  summary: string;
  location: string;
  twitterUrl?: string;
  mediumUrl?: string;
  githubUrl?: string;
  linkedinUrl?: string;
}

const interviews: Array<Interviews> = [
  {
    imageUrl: "/gloria.jpg",
    name: "Gloria Wendroff",
    company: {
      name: "Founder and Godwriter of Heavenletters",
      url: "https://heavenletters.org/stars.html",
    },
    summary:
      "Your writing is so wide and deep â€” like the Ocean. Despite what is beyond my understanding, there is something simple that you say. I suppose that all depth can only be simple the closer we get to Truth. The closer we get to Truth, the closer to Oneness, yes?",
    location: "Fiarfield, United States",
  },
  {
    imageUrl: "/san.jpg",
    name: "San Naidoo",
    company: {
      name: "Founder CommuniTrees & Creative Director of Heavenletters",
      url: "https://heavenletters.org/stars.html",
    },
    summary:
      "In our world of rapid transformation, its paramount that we bridge the compassion & warmth of spirituality to the clarity and intellect of science. This book is such a bridge.",
    location: "South Africa",
  },
];
---

<div class="bg-white">
  <div class="max-w-screen-xl mx-auto pt-16 pb-4 px-4">
    <h2 class="text-3xl leading-9 font-extrabold text-gray-900">
      Feedback from friends...
    </h2>
    <div class="flex flex-col md:flex-row mt-6 pt-10">
      {
        interviews.map((interview) => (
          <div class="mb-12 w-full mb:w-1/2 p-6">
            <Image
              class="float-left w-40 h-40 rounded-full mr-8"
              src={interview.imageUrl}
              alt={interview.name}
              width={160}
              height={160}
            />
            <div class="flex flex-col text-sm">
              <p class="text-2xl font-semibold text-gray-900">
                {interview.name}
              </p>
              <p class="text-xl">
                <a
                  class="underline text-book-gray hover:bg-book-yellow transition ease-in-out duration-300"
                  href={interview.company.url}
                  target="_blank"
                >
                  {interview.company.name}
                </a>
              </p>
              <p class="text-base text-gray-600 mb-1 font-body">
                {interview.summary}
              </p>
              <p class="text-sm italic text-gray-500  font-body">
                {interview.location}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
