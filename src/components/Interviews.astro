---
import Twitter from "./icons/Twitter.astro";
import Github from "./icons/Github.astro";
import Linkedin from "./icons/Linkedin.astro";
import Medium from "./icons/Medium.astro";
import { Image } from "astro:assets";

interface InterviewCompany {
  name: string;
  url: string;
}

interface Interviews {
  imageUrl: string;
  name: string;
  company: InterviewCompany;
  summary: string;
  location: string;
  twitterUrl?: string;
  mediumUrl?: string;
  githubUrl?: string;
  linkedinUrl?: string;
}

const interviews: Array<Interviews> = [
  {
    imageUrl: "/gloria.jpg",
    name: "Gloria Wendroff",
    company: {
      name: "Founder and Godwriter of Heavenletters",
      url: "https://heavenletters.org/stars.html",
    },
    summary:
      "What you may consider unfounded knowledge is pure awareness. All that you have wondered and imagined about the cosmos is true. It is not a flight of fancy you have been on. It is a flight of the heart seeking to reclaim itself.",
    location: "Fiarfield, United States",
    twitterUrl: "https://twitter.com/auryo_j",
    mediumUrl: "https://medium.com/@auryoj",
  },
];
---

<div class="bg-white">
  <div class="max-w-screen-xl mx-auto pt-16 pb-4 px-4">
    <h2 class="text-3xl leading-9 font-extrabold text-gray-900">
      Feedback from friends...
    </h2>
    <div class="mt-6 pt-10">
      {
        interviews.map((interview) => (
          <div class="flex-none sm:flex mb-12">
            <Image
              class="w-40 h-40 rounded-full mr-8"
              src={interview.imageUrl}
              alt={interview.name}
              width={160}
              height={160}
            />
            <div class="text-sm">
              <p class="text-2xl font-semibold text-gray-900">
                {interview.name}
              </p>
              <p class="text-xl">
                <a
                  class="underline text-book-gray hover:bg-book-yellow transition ease-in-out duration-300"
                  href={interview.company.url}
                  target="_blank"
                >
                  {interview.company.name}
                </a>
              </p>
              <p class="text-base text-gray-600 mb-1 font-body">
                Normand, you did it again!<br />
                Your writing stirs so much in me. <br />
                And I’m so grateful to you, for how you bring in Heavenletters™.<br />
                You are the generous of the generous, dear friend.
              </p>
              <p class="text-sm italic text-gray-500  font-body">
                {interview.location}
              </p>
              <div class="flex flex-row my-2">

              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
